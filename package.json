{
    "name": "Fashion_Shop",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^7",
        "@sap/cds-hana": "^2",
        "express": "^4"
    },
    "scripts": {
        "start": "cds-serve",
        "watch-fashion_app": "cds watch --open fashion_app/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy Fashion_Shop --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "cds": {
        "build": {
            "tasks": [
                {
                    "for": "hana",
                    "dest": "../db"
                },
                {
                    "for": "node-cf"
                }
            ]
        },
        "requires": {
            "db": {
                "kind": "hana-cloud"
            }
        }
    },
    "sapux": [
        "app/fashion_app"
    ],
    "devDependencies": {
        "@sap/ux-specification": "^1.120.4",
        "rimraf": "^3.0.2"
    }
}